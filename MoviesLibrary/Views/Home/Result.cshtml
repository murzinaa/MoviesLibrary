@model APIProviders.MovResultById.MovieResultById
<h4>@Model.title</h4>
<img src=@("https://image.tmdb.org/t/p/original"+@Model.poster_path) width="250" height="300" alt=" " />
<p><b>Original language: </b>@Model.original_language</p>
<p><b>Description: </b>@Model.overview</p>
<p><b>Popularity: </b>@Model.popularity</p>
<p><b>Release Date: </b>@Model.release_date</p>
<p><b>Average Vote: </b>@Model.vote_average</p>
<p><b>Count of Votes: </b>@Model.vote_count</p>

<form method="POST">
    <input type="hidden" name="movie" value=@Model.id />
    <button type="submit" class="btn btn-outline-info" asp-controller="Categories" asp-action="AddToFavourite">Add to favourite</button>
</form>
<br />
<br />

<form method="post">
    <label>Add a comment</label><br />
    <input type="text" name="comment" /><br />
    <input type="hidden" name="movie" value=@Model.id />
    <input type="submit" class="btn btn-outline-info" value="Add" asp-controller="MovieResult" asp-action="AddComment" /><br /><br />
</form>
